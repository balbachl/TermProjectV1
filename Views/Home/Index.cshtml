@{
    ViewData["Title"] = "Fit for Life";
}

<div class="p-5 mb-4 shadow" style="background-color:palegoldenrod;border-radius:30px;">
    <h1>Fit For Life <i class="fa fa-heartbeat" style="font-size:36px;"></i></h1>
    <p class="lead">
        The fit for life app includes a BMI, fitness tracking system,
        recipes, tips, tricks and more to help you meet your fitness goals.
    </p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Getting started</h2>
        <p>
            Start by adding your membership information to the app.  Coming soon...<br />
        </p>
    </div>
    <div class="col-md-4">
        <h2>Logging Activities</h2>
        <p>Log your activities in our fitness tracker</p>
    </div>
    <div class="col-md-4">
        <h2>Finding Recipes</h2>
        <p>Find recipes based on food preferences.  View nutritional content before you make the meal!</p>
    </div>
</div>
    <div class="row">
        <img src="~/images/running.jpg" alt="women running in the sunset" asp-append-version="true" 
             class="float-sm-start img-fluid col-sm-4  shadow rounded-sm" />
        <img src="~/images/cycling.jpg" alt="biking through the forest" asp-append-version="true"
             class="float-sm-start img-fluid col-sm-4  shadow rounded-sm"  />
        <img src="~/images/seniors-walking.jpg" alt="seniors walking" asp-append-version="true"
             class="float-sm-start img-fluid col-sm-4  shadow rounded-sm"  />
    </div>

